@using TravelTrip.Models.EntityFramework
@model List<Writers> 

@{
    ViewBag.Title = "Yazarlar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content">
    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                        <div class="card bg-light d-flex flex-fill">
                            <div class="card-header text-muted border-bottom-0">
                            </div>
                            <div class="card-body pt-0">
                                <div class="row">
                                    <div class="col-7">
                                        <h2 class="lead"><b>@item.Name @item.SurName</b></h2>
                                        <p class="text-muted text-sm"><b>Hakkında: </b> @item.About </p>
                                        <ul class="ml-4 mb-0 fa-ul text-muted">
                                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-envelope"></i></span> Mail: @item.Email</li>
                                        </ul>
                                    </div>
                                    <div class="col-5 text-center">
                                        <img src="@item.Image" alt="user-avatar" class="img-circle img-fluid">
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="text-right">
                                    <a href="/Admin/WriterDetail/@item.ID" class="btn btn-sm bg-teal">
                                        <i class="fas fa-comments"></i> Yazarın Başlıkları
                                    </a>
                                    <a href="#" class="btn btn-sm btn-primary">
                                        <i class="fas fa-user"></i> Profili Düzenle
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
