@model TravelTrip.Models.BlogAboutUs

@{
    ViewBag.Title = "Original";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    int i = 0;
}

@Html.Action("Slider", "PartialView")

<div class="blog-wrapper section-padding-100 clearfix">
    <div class="container">
        <div class="row align-items-end">
            <!-- Single Blog Area -->
            @foreach (var item in Model.AboutUs)
            {
                <div class="col-12 col-lg-4">
                    <div class="single-blog-area clearfix mb-100">
                        <!-- Blog Content -->
                        <div class="single-blog-content">
                            <div class="line"></div>
                            <a href="#" class="post-tag">@item.SubTitle</a>
                            <h4><a href="/AboutUs/Index" class="post-headline">@item.Hood</a></h4>
                            <p>@item.Explanation.Substring(0, 150)</p>
                            <a href="/Home/AboutUs/" class="btn original-btn">Devamını Oku</a>
                        </div>
                    </div>
                </div>
            }
            <!-- Single Blog Area -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="single-catagory-area clearfix mb-100">
                    <img src="~/original-master/img/blog-img/1.jpg" alt="">
                    <!-- Catagory Title -->
                    <div class="catagory-title">
                        <a href="#">gezi postları</a>
                    </div>
                </div>
            </div>
            <!-- Single Blog Area -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="single-catagory-area clearfix mb-100">
                    <img src="~/original-master/img/blog-img/2.jpg" alt="">
                    <!-- Catagory Title -->
                    <div class="catagory-title">
                        <a href="@Url.Action("LatestPosts","Blog")">son gönderiler</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-9">

                @foreach (var item in Model.Blog)
                {
                    i++;

                    if (i % 3 == 0)
                    {
                        <div class="single-blog-area blog-style-2 mb-50 wow fadeInUp" data-wow-delay="0.4s" data-wow-duration="1000ms" style="visibility: visible; animation-duration: 1000ms; animation-delay: 0.4s; animation-name: fadeInUp;">
                            <div class="row">
                                <div class="col-12">
                                    <div class="single-blog-thumbnail">
                                        <img src="@item.Image" alt="">
                                        <div class="post-date">
                                            <a href="#">@item.Date.ToString("dd") <span>@item.Date.ToString("MMMM")</span></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <!-- Blog Content -->
                                    <div class="single-blog-content mt-50">
                                        <div class="line"></div>
                                        <a href="#" class="post-tag">@item.Categories.Hood</a>
                                        <h4><a href="/Blog/Details/@item.ID" class="post-headline">@item.Hood</a></h4>
                                        <p>@item.Explanation.Substring(0, 175)...</p>
                                        <div class="post-meta">
                                            <p><a href="Writer/Index/@item.WriterID">@item.Writers.Name @item.Writers.SurName</a> Tarafından</p>
                                            <p>@item.Comments.Where(x => x.BlogID == item.ID).Count() yorum</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="single-blog-area blog-style-2 mb-50 wow fadeInUp" data-wow-delay="0.2s" data-wow-duration="1000ms">
                            <div class="row align-items-center">
                                <div class="col-12 col-md-6">
                                    <div class="single-blog-thumbnail">
                                        <img src="@item.Image" alt="">
                                        <div class="post-date">
                                            <a href="#">@item.Date.ToString("dd") <span>@item.Date.ToString("MMMM")</span></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <!-- Blog Content -->
                                    <div class="single-blog-content">
                                        <div class="line"></div>
                                        <a href="#" class="post-tag">@item.Categories.Hood</a>
                                        <h4><a href="/Blog/Details/@item.ID" class="post-headline">@item.Hood</a></h4>
                                        <p>@item.Explanation.Substring(0, 175)...</p>
                                        <div class="post-meta">
                                            <p><a href="Writer/Index/@item.WriterID">@item.Writers.Name @item.Writers.SurName</a> Tarafından</p>
                                            <p>@item.Comments.Where(x => x.BlogID == item.ID).Count() yorum</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                <div class="load-more-btn mt-100 wow fadeInUp" data-wow-delay="0.7s" data-wow-duration="1000ms">
                    <a href="/Home/Index/" class="btn original-btn">Devamını Oku</a>
                </div>
            </div>
            @Html.Partial("~/Views/Shared/Partial/_PartialSidebar.cshtml")
        </div>
    </div>
</div>

